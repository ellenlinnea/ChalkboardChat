@page
@model ChalkboardChat.UI.Pages.LoginModel
@{
    ViewData["Title"] = "Logga in";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <h2>Logga in</h2>
        <form method="post">
            <div class="mb-3">
                <label asp-for="Username" class="form-label">Användarnamn</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Lösenord</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Logga in</button>
        </form>
        <div class="mt-3 text-center">
            <p>Har du inget konto?</p>
            <a asp-page="/Register" class="btn btn-outline-secondary">Registrera dig</a>
        </div>
    </div>
</div>
