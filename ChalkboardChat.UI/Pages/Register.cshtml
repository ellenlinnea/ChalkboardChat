@page
@model ChalkboardChat.UI.Pages.RegisterModel
@{
    ViewData["Title"] = "Registrera";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <h2>Registrera dig</h2>
        <form method="post">
            <div class="mb-3">
                <label asp-for="Username" class="form-label">Användarnamn</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label">Lösenord</label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label">Bekräfta lösenord</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary w-100">Registrera</button>
        </form>
        <div class="mt-3 text-center">
            <p>Har du redan ett konto?</p>
            <a asp-page="/Login" class="btn btn-outline-secondary">Logga in</a>
        </div>
    </div>
</div>
